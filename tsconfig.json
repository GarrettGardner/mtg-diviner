{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "paths": {
      "@client/*": ["./src/client/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": ["public", "node_modules"]
}
